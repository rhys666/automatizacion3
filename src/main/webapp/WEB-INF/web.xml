<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Página de inicio (welcome file) -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>  <!-- Cambia este archivo si tu página de inicio es diferente -->
    </welcome-file-list>

    <!-- Configuración del servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.loginapp.servlets.LoginServlet</servlet-class>
    </servlet>

    <!-- Mapeo del servlet -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

</web-app>